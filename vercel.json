{
    "version": 2,
    "builds": [
        { "src": "api/index.php", "use": "vercel-php@0.6.0" },
        { "src": "public/**", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/(css|js|images|fonts|assets|build)/(.*)", "dest": "/public/$1/$2" },
        { "src": "/(favicon\\.ico|robots\\.txt|sitemap\\.xml)", "dest": "/public/$1" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ]
}

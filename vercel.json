{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "vercel-php@1.0.0"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(css|js|images|fonts)/(.*)",
        "dest": "public/$1/$2"
      },
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ]
  }
